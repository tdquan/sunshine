<%= form_for @solar_panel, url: {action: "create"} do |f| %>
  <%= f.number_field :size, placeholder: "Size of panel" %>
  <%= f.number_field :price, placeholder: "Price per sol" %>
  <%= f.number_field :efficiency, placeholder: "Efficiency" %>
  <%= f.text_field :address, placeholder: "address" %>
  <%= f.submit value: "Save Panel" %>
<% end %>

<%= link_to "Back", user_dashboard_path, class: "btn btn-default" %>
